{
  "name": "@nr1e/logging",
  "description": "Provides a standard logging pattern",
  "version": "0.0.9-alpha.2",
  "type": "module",
  "author": "NR1E, Inc.",
  "publishConfig": {
    "access": "public"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/nr1etech/logging-js.git"
  },
  "files": [
    "**"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "prettier --check . && gts lint && cp package.json dist",
    "watch": "tsc -w",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --coverage --collectCoverageFrom='src/**/*.{ts,tsx}'",
    "lint": "gts lint",
    "clean": "rm -rf dist && rm -rf site && rm -rf coverage",
    "fix": "gts fix",
    "makepretty": "prettier --write .",
    "site": "typedoc --out site \"src/**/*.ts\" --exclude \"src/**/*.test.ts\""
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "gts": "^5.2.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "pino": "^8.17.2",
    "pino-abstract-transport": "^1.1.0",
    "sonic-boom": "^3.8.1",
    "tslib": "^2.6.3"
  },
  "peerDependencies": {
    "pino": "^8.17.2"
  },
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./index.d.ts"
    }
  }
}
