{
  "name": "@nr1e/logging",
  "description": "Provides a standard logging pattern",
  "version": "0.0.3-alpha.0",
  "main": "index.js",
  "types": "index.d.ts",
  "author": "NR1E, Inc.",
  "publishConfig": {
    "access": "public"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/nr1etech/logging-js.git"
  },
  "files": [
    "/**/*.d.ts",
    "/**/*.js",
    "/**/*.js.map",
    "!/**/*.test.*",
    "!/.prettierrc.js",
    "!/jest.config.js"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "prettier --check . && gts lint",
    "watch": "tsc -w",
    "test": "jest",
    "lint": "gts lint",
    "clean": "find . -type f \\( -name '*.js' -o -name '*.d.ts' -o -name '*.map' \\) ! -name 'jest.config.js' ! -name '.prettierrc.js' -delete",
    "fix": "gts fix",
    "makepretty": "prettier --write ."
  },
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "@types/node": "20.8.2",
    "gts": "^5.2.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "~5.1.6"
  },
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json",
    "./http": "./http/index.js",
    "./errors": "./errors/index.js",
    "./validator": "./validator/index.js"
  },
  "dependencies": {
    "pino": "^8.17.2"
  },
  "peerDependencies": {
    "pino": "^8.17.2"
  }
}
